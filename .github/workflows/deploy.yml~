name: CI Pipeline ALT Linux

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest  # пока GitHub Actions не поддерживает ALT Linux напрямую, запускаем контейнер

    container:
      image: altlinux/alt  # официальный образ ALT Linux, можно уточнить тег

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Install dependencies ALT Linux
      run: |
        # ALT Linux использует apt-get, но может понадобиться обновить список и установить эквиваленты пакетов
        apt-get update
        apt-get install -y qt6-base-devel qt6-declarative-devel cmake gcc-c++ ninja-build lcov xvfb

    - name: Prepare build directory
      run: |
        if [ ! -d build ]; then mkdir build; fi

    - name: Configure CMake
      run: |
        cd build
        cmake .. -G Ninja -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS="--coverage"

    - name: Build project
      run: |
        cd build
        cmake --build .

    - name: Run app (headless)
      run: |
        cd build
        xvfb-run ./appFridge

    - name: Run tests
      run: |
        cd build
        ctest --output-on-failure

    - name: Generate coverage report
      run: |
        cd build
        lcov --capture --directory . --output-file coverage.info
        lcov --remove coverage.info '/usr/*' --output-file coverage.info
        genhtml coverage.info --output-directory coverage-report

    - name: Upload coverage report
      uses: actions/upload-artifact@v4
      with:
        name: coverage-report
        path: build/coverage-report/

